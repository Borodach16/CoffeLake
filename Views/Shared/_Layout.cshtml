<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CoffeLake</title>
    @Styles.Render("~/Content/CustomCss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link active" href="/Home/Index">Главная</a>
                <a class="nav-item nav-link active" href="/Home/About">О нас</a>
                <a class="nav-item nav-link active" href="/MenuCafe/Index">Меню кафе</a>
                <a class="nav-item nav-link active" href="/Product/Index">Товары</a>
                <a class="nav-item nav-link active" href="/Reviews/Index">Отзывы</a>
            </div>
            <div class="navbar-nav">
                @Html.ActionLink("Администрирование", "Index", "Home", new { area = "Admin" }, new { @class = "nav-item nav-link" })
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Константинов Даниил</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>