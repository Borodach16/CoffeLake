@model List<Reviews>
@{
    ViewBag.Title = "Создание отзыва";
}

<h2>Создание отзыва</h2>

<p>
    @Html.ActionLink("Назад", "Index", "Reviews", new { area = "" }, new { @class = "btn btn-secondary" })
</p>

<form action="/Reviews/CreateModel" method="post">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Автор отзыва</label>
        <div class="col-sm-3">
            <input type="text" name="ReviewAuthor" value="" class="form-control" id="inputReviewAuthor">
        </div>
    </div>
    <div class="form-group row">
        <label>Текст отзыва</label>
        <textarea class="form-control" rows="3" name="ReviewText" placeholder="Введите текст"></textarea>
    </div>
    <div class="form-group row">
        <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Оценка</label>
        <div class="col-1">
            <select class="form-control" id="exampleFormControlSelect1">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Ссылка для картинки</label>
        <div class="col-sm-3">
            <input type="text" name="PictureUrl" value="" class="form-control" id="inputPictureUrl">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>