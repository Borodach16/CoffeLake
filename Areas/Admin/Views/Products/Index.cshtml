@model List<Product>
@{
    ViewBag.Title = "Меню кафе";
}

<h2>Список товаров</h2>

<p>
    @Html.ActionLink("Создание товара", "Create", "Products", new { area = "Admin" }, new { @class = "btn btn-primary " })
</p>

<table class="table-bordered  table-hover ">
    <tr>
        <td>Наименование</td>
        <td>Описание</td>
        <td>Цена</td>
        <td>Категория</td>
        <td>Страна</td>
        <td>Действие</td>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Caption</td>
    <td>@item.Description</td>
    <td>@item.Price руб.</td>
    <td>@item.ProductCategory.Caption</td>
    <td>@item.Quantity</td>
    <td>
        @Html.ActionLink("Редактировать", "Edit", "Products", new { area = "Admin", id=item.Id }, new { @class = "btn btn-success " })
        @Html.ActionLink("Удалить", "Remove", "Products", new { area = "Admin", id = item.Id }, new { @class = "btn btn-danger " })
    </td>
</tr>

    }
</table>

