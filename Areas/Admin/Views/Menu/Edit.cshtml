@using CoffeLake.Areas.Admin.Models

@model MenuEditPage
@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование позиции @Model.Menu.Caption</h2>
<p>
    @Html.ActionLink("Назад", "Index", "Menu", new { area = "Admin" }, new { @class = "btn btn-secondary" })
</p>



<form action="/Admin/Menu/EditModel" method="post">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Наименование</label>
        <div class="col-sm-3">
            <input type="text" name="Caption" value="@Model.Menu.Caption" class="form-control" id="inputName">
        </div>
    </div>
    <div class="form-group row">
        <label>Описание</label>
        <textarea class="form-control" rows="3" name="Description" placeholder="Введите описание">@Model.Menu.Description</textarea>
    </div>
    <div class="form-group row">
        <label for="inputPrice" class="col-sm-2 col-form-label">Price</label>
        <div class="col-1">
            <input type="text" name="Price" value="@Model.Menu.Price" class="form-control" id="inputPrice">
        </div>
    </div>
    <div class="form-group row">
        <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Категория</label>
        <div class="col-1">
            <select class="form-control" id="exampleFormControlSelect1" name="MenuCategoryId">
                @foreach (var item in Model.Categories)
                {
                    if (item.Id == Model.Menu.MenuCategoryId)
                    {
                        <option selected value="@item.Id">@item.Caption</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Caption</option>
                    }
                }
            </select>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Menu.Id" />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>

