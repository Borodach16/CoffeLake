@model List<MenuCategory>

@{
    ViewBag.Title = "Create";
}
<h2>Создание позиции</h2>
<p>
    @Html.ActionLink("Назад", "Index", "Menu", new { area = "Admin" }, new { @class = "btn btn-secondary" })
</p>

<form action="/Admin/Menu/CreateModel" method="post">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Наименование</label>
        <div class="col-sm-3">
            <input type="text" name="Caption" value="" class="form-control" id="inputName">
        </div>
    </div>
    <div class="form-group row">
        <label>Описание</label>
        <textarea class="form-control" rows="3" name="Description" placeholder="Введите описание"></textarea>
    </div>
    <div class="form-group row">
        <label for="inputPrice" class="col-sm-2 col-form-label">Цена</label>
        <div class="col-1">
            <input type="text" name="Price" value="" class="form-control" id="inputPrice">
        </div>
    </div>
    <div class="form-group row">
        <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Категория</label>
        <div class="col-1">
            <select class="form-control" id="exampleFormControlSelect1" name="MenuCategoryId">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Caption</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>