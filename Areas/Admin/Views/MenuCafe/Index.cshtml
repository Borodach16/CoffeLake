@model List<CoffeLakeMenu>
@{
    ViewBag.Title = "Меню кафе";
}

<h2>Меню кафе</h2>
<p>
    @Html.ActionLink("Создать элемент", "Create", "MenuCafe", new { area = "Admin" }, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <td>Наименование</td>
        <td>Описание</td>
        <td>Цена</td>
        <td>Категория</td>
        <td>Действие</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Caption</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.MenuCategory.Caption</td>
            <td>
                @Html.ActionLink("Редактировать элемент", "Edit", "MenuCafe", new { area = "Admin", id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>